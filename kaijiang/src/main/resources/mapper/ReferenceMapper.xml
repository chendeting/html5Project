<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cj.dao.ReferenceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cj.model.Reference">
        <result column="year" property="year" />
        <result column="hm" property="hm" />
        <result column="sx" property="sx" />
        <result column="color" property="color" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        year, hm, sx, color
    </sql>

    <select id="selectByHm" resultType="map">
        select hm hm,sx sx,color color from reference where hm = #{hm}
    </select>



</mapper>
